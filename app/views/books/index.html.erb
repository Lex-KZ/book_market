<section class="hero-image">
  <div id="background-box">
    <div class="container">
      <h1> Welcome! </h1>
      <div class="card-deck"> 
        <% @books.each do |book| %> 

          <div class="card" style="width: 18rem;">
          <%= image_tag book.picture, alt: "Image of book", class: "card-img-top" if book.picture.attached? %>
            <div class="card-body">
              <h5 class="card-title"><%=sanitize book.title.html_safe%></h5>
              <h6 class="card-subtitle mb-2 text-muted"><%=sanitize book.author_full_name.html_safe%></h6>
              <p class="card-text mt-2"><%=sanitize book.blurb.html_safe%></p>
              <p class="card-text"><small class="text-muted"> $<%=book.cost%></small></p>
              <%=link_to 'View', book_path(book), class: "btn btn-primary"%>
            </div>
          </div> 
  
        <%end%> 
    </div> 
  </div>

  </div>
</section>
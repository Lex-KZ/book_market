<section class="hero-image">
  <div id="background-box">
    <div class="container">
      <h1> Welcome! </h1>
      <div class="card-deck"> 
        <% @books.each do |book| %> 

          <div class="card" style="width: 18rem;">
          <%= image_tag book.picture, alt: "Image of book", class: "card-img-top" if book.picture.attached? %>
            <div class="card-body">
              <h5 class="card-title"><%=book.title%></h5>
              <h6 class="card-subtitle mb-2 text-muted"><%=book.author_full_name%></h6>
              <p class="card-text mt-2"><%=book.blurb %></p>
              <p class="card-text"><small class="text-muted"> $<%=book.cost%></small></p>
              <%=link_to 'View', book_path(book), class: "btn btn-primary"%>
              <%=link_to 'Edit', edit_book_path(book), class: "btn btn-warning"%>
              <%=link_to 'Delete', book_path(book), class: "btn btn-danger", method: "delete", data: { confirm: "Are you sure?" }%>
            </div>
          </div> 
  
        <%end%> 
    </div> 
  </div>
    
    <%= link_to "New Book", new_book_path %>

  </div>
</section>